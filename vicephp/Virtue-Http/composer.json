{
    "name": "vicephp/virtue-http",
    "type": "library",
    "description": "Making HTTP more Pythonic...",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.6",
        "phpstan/phpstan": "^0.12.0",
        "phpunit/phpunit": "^8.0 | ^9.0"
    },
    "suggest": {
        "guzzlehttp/psr7": "PSR-7 Message Implementation"
    },
    "autoload": {
        "psr-4": {
            "Virtue\\Http\\": "src/Http/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Virtue\\Http\\": "tests/Http/"
        }
    }
}

{
    "name": "vicephp/virtue-api",
    "type": "library",
    "description": "Making PHP more Pythonic",
    "keywords": ["framework","micro","api","router"],
    "license": "MIT",
    "minimum-stability": "dev",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "^7.1",
        "slim/psr7": "dev-master",
        "slim/slim": "~4.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "php-di/php-di": "~6.0",
        "phpstan/phpstan": "^0.12.0",
        "phpunit/phpunit": "~7.0"
    },
    "autoload": {
        "psr-4": {
            "Virtue\\Api\\": "src/Api/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Virtue\\Api\\": "tests/Api/"
        }
    }
}
